{
  "name": "@kyedoesdev/hello-wasm-with-c",
  "version": "0.1.0",
  "description": "Hello, World for WASM with C",
  "main": "src/web/index.ts",
  "scripts": {
    "start": "npm run build && vite src/js",
    "build": "clang-11 --target=wasm32 -O3 -std=c11 --no-standard-libraries -Wl,--export=render -Wl,--export=getImageWidth -Wl,--export=getImageHeight -Wl,--export=getInputPtr -Wl,--no-entry -Wl,--allow-undefined -mbulk-memory -o out/hello.wasm src/c/hello.c src/c/text.c src/c/font.c",
    "lint:c": "clang-format -style=google -i src/c/*"
  },
  "author": "Kye Lewis <kye@kyedoesdev.com>",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^2.7.1",
    "vite": "3.0.0"
  }
}
